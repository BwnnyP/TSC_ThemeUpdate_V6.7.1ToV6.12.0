            <div class="ai-product-showcase__image-wrapper-{{ ai_gen_id }}">
              {% if custom_image != blank %}
                <img
                  src="{{ custom_image | image_url: width: 800 }}"
                  alt="{{ product.title | escape }}"
                  class="ai-product-showcase__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="800"
                  height="800"
                >
              {% elsif product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 800 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-product-showcase__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="800"
                  height="800"
                >
              {% else %}
                <div class="ai-product-showcase__image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="ai-product-showcase__content-{{ ai_gen_id }}">
              <h3 class="ai-product-showcase__title-{{ ai_gen_id }}">{{ product.title }}</h3>

              <div class="ai-product-showcase__price-wrapper-{{ ai_gen_id }}">
                <span class="ai-product-showcase__price-{{ ai_gen_id }}">{{ product.price | money }}</span>
                {% if product.compare_at_price > product.price %}
                  <span class="ai-product-showcase__compare-price-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
                {% endif %}
              </div>

              <span class="ai-product-showcase__button-{{ ai_gen_id }}">{{ block.settings.button_text }}</span>

              <div class="ai-product-showcase__specs-{{ ai_gen_id }}">
                {% if best_for != blank %}
                  <div class="ai-product-showcase__spec-{{ ai_gen_id }}">
                    <svg class="ai-product-showcase__spec-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
                    </svg>
                    <span class="ai-product-showcase__spec-label-{{ ai_gen_id }}">Best For</span>
                    <span class="ai-product-showcase__spec-value-{{ ai_gen_id }}">{{ best_for }}</span>
                  </div>
                {% endif %}

                {% if speed != blank %}
