                      <path d="M12 2v4"></path>
                      <path d="m6.8 15-3.5 2"></path>
                      <path d="m20.7 7-3.5 2"></path>
                      <path d="M6.8 9 3.3 7"></path>
                      <path d="m20.7 17-3.5-2"></path>
                      <path d="m9 22 3-8 3 8"></path>
                      <path d="M8 22h8"></path>
                      <path d="M18 18.7a9 9 0 1 0-12 0"></path>
                    </svg>
                    <span class="ai-product-showcase__spec-label-{{ ai_gen_id }}">Top Speed</span>
                    <span class="ai-product-showcase__spec-value-{{ ai_gen_id }}">{{ speed }}</span>
                  </div>
                {% endif %}

                {% if range != blank %}
                  <div class="ai-product-showcase__spec-{{ ai_gen_id }}">
                    <svg class="ai-product-showcase__spec-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M10 17.5 6 14v-4"></path>
                      <path d="M14 17.5 18 14v-4"></path>
                      <path d="M7 7h10"></path>
                      <path d="M6 11h12"></path>
                      <rect x="2" y="3" width="20" height="18" rx="2"></rect>
                    </svg>
                    <span class="ai-product-showcase__spec-label-{{ ai_gen_id }}">Range</span>
                    <span class="ai-product-showcase__spec-value-{{ ai_gen_id }}">{{ range }}</span>
                  </div>
