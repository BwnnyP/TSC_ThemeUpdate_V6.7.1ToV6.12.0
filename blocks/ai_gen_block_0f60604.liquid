      {% if block.settings.heading != blank %}
        <h2 class="ai-product-showcase__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}
      {% if block.settings.subheading != blank %}
        <p class="ai-product-showcase__subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
      {% endif %}
    </div>
  {% endif %}

