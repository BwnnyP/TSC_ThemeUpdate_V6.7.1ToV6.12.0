{% doc %}
  @prompt
    Up to 3 product cards side by side. Center-aligned content.
    Use manually selected images per card (not product featured images).
{% enddoc %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-cards-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 40px 20px;
    background: {{ block.settings.section_bg }};
  }

  /* Anchor target so hash links don't land under sticky headers */
  .ai-product-cards-anchor-{{ ai_gen_id }}{
    display: block;
    position: relative;
    top: -12px;
    height: 0;
    visibility: hidden;
    scroll-margin-top: 110px;
  }

  .ai-product-cards-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-product-cards-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: 40px;
  }

  .ai-product-cards-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 12px 0;
    font-weight: 700;
  }

  .ai-product-cards-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
    font-weight: 400;
  }

  /* =========================
     GRID (CENTERS 1/2/3 CARDS)
     ========================= */
  .ai-product-cards-grid-{{ ai_gen_id }} {
    display: grid;
    gap: {{ block.settings.card_spacing }}px;

    /* KEY: auto-fit collapses unused columns */
    grid-template-columns: repeat(auto-fit, minmax(320px, 420px));

    /* KEY: centers the whole group */
    justify-content: center;

    /* centers cards within their tracks */
    justify-items: center;
  }

  /* Mobile: full width cards */
  @media screen and (max-width: 749px) {
    .ai-product-cards-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      justify-items: stretch;
    }
  }

  /* =========================
     CARD
     ========================= */
  .ai-product-card-{{ ai_gen_id }} {
    width: 100%;
    max-width: 420px; /* matches grid max track size */
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    display: flex;
    flex-direction: column;
    gap: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | times: 1.5 | divided_by: 100.0 }});
  }

  .ai-product-card-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    background-color: #f4f4f4;
  }

  .ai-product-card-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-product-card-image-wrapper-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* =========================
     CONTENT (CENTERED)
     ========================= */
  .ai-product-card-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 12px;
    flex-grow: 1;
    text-align: center;
    align-items: center;
  }

  .ai-product-card-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_name_size }}px;
    color: {{ block.settings.product_name_color }};
    margin: 0;
    font-weight: 700;
  }

  .ai-product-card-tagline-{{ ai_gen_id }} {
    font-size: {{ block.settings.tagline_size }}px;
    color: {{ block.settings.tagline_color }};
    margin: 0;
    font-weight: 500;
  }

  .ai-product-card-outcomes-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin: 0;
    padding: 0;
    list-style: none;
    align-items: center;
  }

  .ai-product-card-outcome-{{ ai_gen_id }} {
    font-size: {{ block.settings.outcome_size }}px;
    color: {{ block.settings.outcome_color }};
    display: flex;
    gap: 8px;
    align-items: flex-start;
    width: fit-content;
    text-align: left;
  }

  .ai-product-card-outcome-{{ ai_gen_id }}::before {
    content: "âœ“";
    color: {{ block.settings.checkmark_color }};
    font-weight: 700;
    flex-shrink: 0;
  }

  .ai-product-card-actions-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-top: auto;
    align-items: center;
    width: 100%;
  }

  .ai-product-card-primary-cta-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 28px;
    background-color: {{ block.settings.primary_cta_background }};
    color: {{ block.settings.primary_cta_text }};
    text-decoration: none;
    border-radius: {{ block.settings.cta_border_radius }}px;
    font-weight: 600;
    text-align: center;
    transition: background-color 0.2s ease;
    font-size: {{ block.settings.primary_cta_size }}px;
    width: 100%;
    max-width: 320px;
  }

  .ai-product-card-primary-cta-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_cta_hover }};
  }

  .ai-product-card-secondary-link-{{ ai_gen_id }} {
    font-size: {{ block.settings.secondary_link_size }}px;
    color: {{ block.settings.secondary_link_color }};
    text-decoration: underline;
    text-align: center;
    transition: opacity 0.2s ease;
  }

  .ai-product-card-secondary-link-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }
{% endstyle %}

<product-cards-{{ ai_gen_id }} class="ai-product-cards-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {%- assign anchor_id = block.settings.anchor_id | default: '' -%}
  {% if anchor_id != blank %}
    <span id="{{ anchor_id | escape }}" class="ai-product-cards-anchor-{{ ai_gen_id }}"></span>
  {% endif %}

  <div class="ai-product-cards-container-{{ ai_gen_id }}">
    <div class="ai-product-cards-header-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-product-cards-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}
      {% if block.settings.subheading != blank %}
        <p class="ai-product-cards-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
      {% endif %}
    </div>

    <div class="ai-product-cards-grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign enabled_key = 'product_' | append: i | append: '_enabled'
          assign product_key = 'product_' | append: i
          assign image_key = 'product_' | append: i | append: '_image'

          assign name_key = 'product_' | append: i | append: '_name'
          assign tagline_key = 'product_' | append: i | append: '_tagline'
          assign outcome1_key = 'product_' | append: i | append: '_outcome_1'
          assign outcome2_key = 'product_' | append: i | append: '_outcome_2'
          assign cta_text_key = 'product_' | append: i | append: '_cta_text'
          assign cta_link_key = 'product_' | append: i | append: '_cta_link'
          assign secondary_text_key = 'product_' | append: i | append: '_secondary_text'
          assign secondary_link_key = 'product_' | append: i | append: '_secondary_link'

          assign enabled = block.settings[enabled_key]
          assign product = block.settings[product_key]
          assign custom_image = block.settings[image_key]

          assign product_name = block.settings[name_key]
          assign tagline = block.settings[tagline_key]
          assign outcome1 = block.settings[outcome1_key]
          assign outcome2 = block.settings[outcome2_key]
          assign cta_text = block.settings[cta_text_key]
          assign cta_link = block.settings[cta_link_key]
          assign secondary_text = block.settings[secondary_text_key]
          assign secondary_link = block.settings[secondary_link_key]
        %}

        {% if enabled %}
          <div class="ai-product-card-{{ ai_gen_id }}">
            <div class="ai-product-card-image-wrapper-{{ ai_gen_id }}">
              {% if custom_image != blank %}
                <img
                  src="{{ custom_image | image_url: width: 800 }}"
                  alt="{{ custom_image.alt | escape }}"
                  class="ai-product-card-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="800"
                  height="800"
                >
              {% elsif product != blank and product.featured_image %}
                {%- comment -%}fallback only (if no custom image chosen){%- endcomment -%}
                <img
                  src="{{ product.featured_image | image_url: width: 800 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-product-card-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="800"
                  height="800"
                >
              {% else %}
                {{ 'image' | placeholder_svg_tag }}
              {% endif %}
            </div>

            <div class="ai-product-card-content-{{ ai_gen_id }}">
              {% if product_name != blank %}
                <h3 class="ai-product-card-name-{{ ai_gen_id }}">{{ product_name }}</h3>
              {% elsif product != blank %}
                <h3 class="ai-product-card-name-{{ ai_gen_id }}">{{ product.title }}</h3>
              {% endif %}

              {% if tagline != blank %}
                <p class="ai-product-card-tagline-{{ ai_gen_id }}">{{ tagline }}</p>
              {% endif %}

              {% if outcome1 != blank or outcome2 != blank %}
                <ul class="ai-product-card-outcomes-{{ ai_gen_id }}">
                  {% if outcome1 != blank %}
                    <li class="ai-product-card-outcome-{{ ai_gen_id }}">{{ outcome1 }}</li>
                  {% endif %}
                  {% if outcome2 != blank %}
                    <li class="ai-product-card-outcome-{{ ai_gen_id }}">{{ outcome2 }}</li>
                  {% endif %}
                </ul>
              {% endif %}

              <div class="ai-product-card-actions-{{ ai_gen_id }}">
                {% if cta_text != blank %}
                  <a
                    href="{% if cta_link != blank %}{{ cta_link }}{% elsif product != blank %}{{ product.url }}{% else %}#{% endif %}"
                    class="ai-product-card-primary-cta-{{ ai_gen_id }}"
                  >
                    {{ cta_text }}
                  </a>
                {% endif %}

                {% if secondary_text != blank %}
                  <a
                    href="{% if secondary_link != blank %}{{ secondary_link }}{% elsif product != blank %}{{ product.url }}{% else %}#{% endif %}"
                    class="ai-product-card-secondary-link-{{ ai_gen_id }}"
                  >
                    {{ secondary_text }}
                  </a>
                {% endif %}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</product-cards-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductCards{{ ai_gen_id }} extends HTMLElement {
      connectedCallback() {
        const cards = this.querySelectorAll('.ai-product-card-{{ ai_gen_id }}');
        cards.forEach((card, index) => {
          card.setAttribute('role', 'article');
          card.setAttribute('aria-label', 'Product card ' + (index + 1));
        });
      }
    }
    customElements.define('product-cards-{{ ai_gen_id }}', ProductCards{{ ai_gen_id }});
  })();
</script>

