<script>
  (function() {
    class StateTabs{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.tabButtons = this.querySelectorAll('.ai-state-tabs__tab-button-{{ ai_gen_id }}');
        this.tabPanels = this.querySelectorAll('.ai-state-tabs__panel-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.tabButtons.forEach((button) => {
          button.addEventListener('click', (e) => {
            const targetTab = e.target.getAttribute('data-tab');
            this.switchTab(targetTab);
          });

          button.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' || e.key === ' ') {
              e.preventDefault();
              const targetTab = e.target.getAttribute('data-tab');
              this.switchTab(targetTab);
            }
          });
        });
      }

      switchTab(targetTab) {
        this.tabButtons.forEach((button) => {
          const isActive = button.getAttribute('data-tab') === targetTab;
          button.classList.toggle('active', isActive);
          button.setAttribute('aria-selected', isActive);
        });

        this.tabPanels.forEach((panel) => {
          const isActive = panel.getAttribute('data-panel') === targetTab;
          panel.classList.toggle('active', isActive);
        });
      }
    }

    customElements.define('state-tabs-{{ ai_gen_id }}', StateTabs{{ ai_gen_id }});
  })();
</script>

