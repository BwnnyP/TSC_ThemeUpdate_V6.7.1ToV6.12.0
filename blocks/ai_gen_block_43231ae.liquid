{% doc %}
  @prompt
    I need a section that takes up the whole screen. It's a hero image, with a colour gradient overlay. It has a heading in the middle, with a sub heading on top, and a paragraph below
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-section-{{ ai_gen_id }} {
    position: relative;
    width: 100vw;
    height: 100vh;
    margin-left: calc(-50vw + 50%);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .ai-hero-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-hero-background-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-background-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-background-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
    opacity: 0.3;
  }

  .ai-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      {{ block.settings.gradient_direction }}deg,
      {{ block.settings.gradient_color_1 | color_modify: 'alpha', block.settings.gradient_opacity_1 }},
      {{ block.settings.gradient_color_2 | color_modify: 'alpha', block.settings.gradient_opacity_2 }}
    );
    z-index: 2;
  }

  .ai-hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
    max-width: {{ block.settings.content_width }}px;
    padding: 0 20px;
  }

  .ai-hero-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    font-weight: 400;
    margin: 0 0 {{ block.settings.subheading_spacing }}px 0;
    letter-spacing: {{ block.settings.subheading_letter_spacing }}px;
    text-transform: {{ block.settings.subheading_transform }};
    font-family: {{ block.settings.subheading_font.family }}, {{ block.settings.subheading_font.fallback_families }};
    font-weight: {{ block.settings.subheading_font.weight }};
    font-style: {{ block.settings.subheading_font.style }};
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    margin: 0 0 {{ block.settings.heading_spacing }}px 0;
    line-height: 1.1;
    letter-spacing: {{ block.settings.heading_letter_spacing }}px;
    text-transform: {{ block.settings.heading_transform }};
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-style: {{ block.settings.heading_font.style }};
  }

  .ai-hero-paragraph-{{ ai_gen_id }} {
    font-size: {{ block.settings.paragraph_size }}px;
    font-weight: 400;
    margin: 0;
    line-height: 1.6;
    letter-spacing: {{ block.settings.paragraph_letter_spacing }}px;
    font-family: {{ block.settings.paragraph_font.family }}, {{ block.settings.paragraph_font.fallback_families }};
    font-weight: {{ block.settings.paragraph_font.weight }};
    font-style: {{ block.settings.paragraph_font.style }};
  }

  .ai-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    background-color: rgba(255, 255, 255, 0.9);
    padding: 12px 20px;
    border-radius: 8px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    z-index: 4;
  }

  @media screen and (max-width: 749px) {
    .ai-hero-section-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_height }}vh;
    }

    .ai-hero-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.8 }}px;
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-hero-paragraph-{{ ai_gen_id }} {
      font-size: {{ block.settings.paragraph_size | times: 0.9 }}px;
    }

    .ai-hero-content-{{ ai_gen_id }} {
      max-width: 100%;
      padding: 0 16px;
    }
  }
{% endstyle %}

<div
  class="ai-hero-section-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-hero-background-{{ ai_gen_id }}">
    {% if block.settings.background_image %}
      <img
        src="{{ block.settings.background_image | image_url: width: 2000 }}"
        alt="{{ block.settings.background_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.background_image.width }}"
        height="{{ block.settings.background_image.height }}"
      >
    {% else %}
      <div class="ai-hero-background-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  <div class="ai-hero-overlay-{{ ai_gen_id }}"></div>

  <div class="ai-hero-content-{{ ai_gen_id }}">
    {% if block.settings.subheading != blank %}
      <div class="ai-hero-subheading-{{ ai_gen_id }}">
        {{ block.settings.subheading }}
      </div>
    {% endif %}

    {% if block.settings.heading != blank %}
      <h1 class="ai-hero-heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h1>
    {% endif %}

    {% if block.settings.paragraph != blank %}
      <div class="ai-hero-paragraph-{{ ai_gen_id }}">
        {{ block.settings.paragraph }}
      </div>
    {% endif %}
  </div>

  {% unless block.settings.background_image %}
    <div class="ai-hero-empty-state-{{ ai_gen_id }}">
      Add a background image to complete your hero section
    </div>
  {% endunless %}
</div>

