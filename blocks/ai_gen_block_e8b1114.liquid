{% doc %}
  @prompt
    Valour two-column section: centered heading + small subheading, then two columns.
    Left column: no border/background, a label, then a list with red X bullets.
    Right column: bordered card with blue glow + subtle gradient background, check badge, big headline, paragraph, divider, small link text.
    Dark section background with a soft vignette.
{% enddoc %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-why-title-{{ ai_gen_id }} {
    font-size: 56px;
    color: #ffffff;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    line-height: 1.05;
  }

  .ai-why-title-{{ ai_gen_id }} .accent {
    color: #2ea7ff;
  }

  .ai-valour-two-tiles-{{ ai_gen_id }}{
    position: relative;
    width: 100%;
    padding: {{ block.settings.section_padding_y }}px 20px;
    background:
      radial-gradient(ellipse at center,
        rgba(0,0,0, {{ block.settings.vignette_center_opacity }}) 0%,
        rgba(0,0,0, {{ block.settings.vignette_edge_opacity }}) 70%,
        rgba(0,0,0, {{ block.settings.vignette_edge_opacity }}) 100%
      ),
      {{ block.settings.section_bg }};
    overflow: hidden;
  }

  .ai-valour-two-tiles__inner-{{ ai_gen_id }}{
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-valour-two-tiles__header-{{ ai_gen_id }}{
    text-align: center;
    margin-bottom: 54px;
  }

  .ai-valour-two-tiles__pill-{{ ai_gen_id }}{
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 7px 14px;
    border-radius: 999px;
    border: 1px solid rgba(46,167,255,0.35);
    background: rgba(0,0,0,0.25);
    color: {{ block.settings.accent_color }};
    font-size: 11px;
    letter-spacing: 0.16em;
    text-transform: uppercase;
    margin-bottom: 18px;
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
  }

  .ai-valour-two-tiles__title-{{ ai_gen_id }}{
    margin: 0 0 12px;
    line-height: 1.02;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-weight: 500;
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-valour-two-tiles__title .accent{
    color: {{ block.settings.accent_color }};
  }

  .ai-valour-two-tiles__sub-{{ ai_gen_id }}{
    margin: 0 auto;
    max-width: 760px;
    color: {{ block.settings.muted_text_color }};
    font-size: {{ block.settings.subheading_size }}px;
    line-height: 1.6;
    opacity: 0.9;
  }

  .ai-valour-two-tiles__grid-{{ ai_gen_id }}{
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.grid_gap }}px;
    align-items: center;
  }

  /* LEFT */
  .ai-valour-two-tiles__left-{{ ai_gen_id }}{
    padding-right: 10px;
  }

  .ai-valour-two-tiles__left-label-{{ ai_gen_id }}{
    margin: 0 0 14px;
    font-size: {{ block.settings.left_label_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: 600;
    letter-spacing: 0.01em;
  }

  .ai-valour-two-tiles__list-{{ ai_gen_id }}{
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 14px;
    max-width: 520px;
  }

  .ai-valour-two-tiles__li-{{ ai_gen_id }}{
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 14px 14px;
    border-radius: 10px;
    border: 1px solid rgba(255,255,255,0.06);
    background: rgba(255,255,255,0.02);
  }

  .ai-valour-two-tiles__xwrap-{{ ai_gen_id }}{
    width: 28px;
    height: 28px;
    border-radius: 999px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 61, 61, 0.10);
    border: 1px solid rgba(255, 61, 61, 0.22);
    flex: 0 0 auto;
  }

  .ai-valour-two-tiles__xwrap-{{ ai_gen_id }} svg{
    width: 14px;
    height: 14px;
    stroke: {{ block.settings.left_x_color }};
    stroke-width: 2.6;
    fill: none;
    stroke-linecap: round;
  }

  .ai-valour-two-tiles__li-text-{{ ai_gen_id }}{
    margin: 0;
    color: {{ block.settings.muted_text_color }};
    font-size: {{ block.settings.list_item_size }}px;
    line-height: 1.5;
    opacity: 0.95;
  }

  /* RIGHT CARD */
  .ai-valour-two-tiles__card-{{ ai_gen_id }}{
    position: relative;
    border-radius: {{ block.settings.card_radius }}px;
    border: 1px solid rgba(46,167,255,0.28);
    background:
      radial-gradient(120% 120% at 20% 10%,
        rgba(46,167,255,0.18) 0%,
        rgba(46,167,255,0.08) 40%,
        rgba(10,14,18,0.65) 100%
      );
    box-shadow:
      0 0 {{ block.settings.glow_intensity }}px rgba(46,167,255,0.18),
      0 18px 60px rgba(0,0,0,0.55);
    padding: 34px 34px;
    min-height: 360px;
  }

  .ai-valour-two-tiles__checkbadge-{{ ai_gen_id }}{
    width: 46px;
    height: 46px;
    border-radius: 12px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: rgba(46,167,255,0.14);
    border: 1px solid rgba(46,167,255,0.22);
    margin-bottom: 22px;
  }

  .ai-valour-two-tiles__checkbadge-{{ ai_gen_id }} svg{
    width: 22px;
    height: 22px;
    stroke: {{ block.settings.accent_color }};
    stroke-width: 2.4;
    fill: none;
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  .ai-valour-two-tiles__card-title-{{ ai_gen_id }}{
    margin: 0 0 12px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    line-height: 1.05;
    font-weight: 500;
    font-size: {{ block.settings.card_title_size }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-valour-two-tiles__card-title-{{ ai_gen_id }} .accent{
    color: {{ block.settings.accent_color }};
  }

  .ai-valour-two-tiles__card-body-{{ ai_gen_id }}{
    margin: 0;
    color: {{ block.settings.muted_text_color }};
    font-size: {{ block.settings.card_body_size }}px;
    line-height: 1.65;
    max-width: 520px;
    opacity: 0.92;
  }

  .ai-valour-two-tiles__divider-{{ ai_gen_id }}{
    height: 1px;
    width: 100%;
    background: rgba(46,167,255,0.18);
    margin: 22px 0 18px;
  }

  .ai-valour-two-tiles__card-link-{{ ai_gen_id }}{
    color: {{ block.settings.accent_color }};
    font-size: {{ block.settings.card_link_size }}px;
    font-weight: 600;
    text-decoration: none;
    opacity: 0.95;
  }

  .ai-valour-two-tiles__card-link-{{ ai_gen_id }}:hover{
    text-decoration: underline;
  }

  @media screen and (max-width: 989px){
    .ai-valour-two-tiles__grid-{{ ai_gen_id }}{
      grid-template-columns: 1fr;
      gap: 26px;
    }
    .ai-valour-two-tiles__left-{{ ai_gen_id }}{
      padding-right: 0;
    }
    .ai-valour-two-tiles__card-{{ ai_gen_id }}{
      min-height: unset;
    }
  }

  @media screen and (max-width: 749px){
    .ai-valour-two-tiles-{{ ai_gen_id }}{
      padding: {{ block.settings.section_padding_y | times: 0.75 }}px 16px;
    }
    .ai-valour-two-tiles__title-{{ ai_gen_id }}{
      font-size: {{ block.settings.title_size | times: 0.72 }}px;
      letter-spacing: 0.06em;
    }
  }
{% endstyle %}

<div class="ai-valour-two-tiles-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-valour-two-tiles__inner-{{ ai_gen_id }}">
    <div class="ai-valour-two-tiles__header-{{ ai_gen_id }}">
      {% if block.settings.pill_text != blank %}
        <div class="ai-valour-two-tiles__pill-{{ ai_gen_id }}">{{ block.settings.pill_text }}</div>
      {% endif %}


      <h2 class="ai-why-title-{{ ai_gen_id }}">
        {{ block.settings.title_prefix }}
        <span class="accent">{{ block.settings.title_accent }}</span>
      </h2>

      {% if block.settings.subheading != blank %}
        <div class="ai-valour-two-tiles__sub-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
      {% endif %}
    </div>

    <div class="ai-valour-two-tiles__grid-{{ ai_gen_id }}">
      <!-- LEFT -->
      <div class="ai-valour-two-tiles__left-{{ ai_gen_id }}">
        {% if block.settings.left_label != blank %}
          <div class="ai-valour-two-tiles__left-label-{{ ai_gen_id }}">{{ block.settings.left_label }}</div>
        {% endif %}

        {% if block.settings.left_list != blank %}
          <ul class="ai-valour-two-tiles__list-{{ ai_gen_id }}">
            {% assign left_items = block.settings.left_list | split: '|' %}
            {% for item in left_items %}
              {% assign t = item | strip %}
              {% if t != blank %}
                <li class="ai-valour-two-tiles__li-{{ ai_gen_id }}">
                  <span class="ai-valour-two-tiles__xwrap-{{ ai_gen_id }}" aria-hidden="true">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                      <path d="M18 6L6 18"></path>
                      <path d="M6 6l12 12"></path>
                    </svg>
                  </span>
                  <p class="ai-valour-two-tiles__li-text-{{ ai_gen_id }}">{{ t }}</p>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <!-- RIGHT -->
      <div class="ai-valour-two-tiles__right-{{ ai_gen_id }}">
        <div class="ai-valour-two-tiles__card-{{ ai_gen_id }}">
          <div class="ai-valour-two-tiles__checkbadge-{{ ai_gen_id }}" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <path d="M20 6L9 17l-5-5"></path>
            </svg>
          </div>

          {% if block.settings.right_title_prefix != blank or block.settings.right_title_accent != blank %}
            <div class="ai-valour-two-tiles__card-title-{{ ai_gen_id }}">
              {{ block.settings.right_title_prefix }}
              {% if block.settings.right_title_accent != blank %}<span class="accent">{{ block.settings.right_title_accent }}</span>{% endif %}
            </div>
          {% endif %}

          {% if block.settings.right_paragraph != blank %}
            <div class="ai-valour-two-tiles__card-body-{{ ai_gen_id }}">{{ block.settings.right_paragraph }}</div>
          {% endif %}

          <div class="ai-valour-two-tiles__divider-{{ ai_gen_id }}"></div>

          {% if block.settings.right_link_text != blank %}
            {% if block.settings.right_link_url != blank %}
              <a class="ai-valour-two-tiles__card-link-{{ ai_gen_id }}" href="{{ block.settings.right_link_url }}">
                {{ block.settings.right_link_text }}
              </a>
            {% else %}
              <span class="ai-valour-two-tiles__card-link-{{ ai_gen_id }}">{{ block.settings.right_link_text }}</span>
            {% endif %}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

