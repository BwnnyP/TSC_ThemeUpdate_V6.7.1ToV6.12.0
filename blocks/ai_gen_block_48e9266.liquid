{% doc %}
  @prompt
    Create a hero video section  with the following specifications:
    Layout Structure:
    
    Full-width video background (16:9 aspect ratio, autoplay, muted, loop)
    Large bold headline overlaid on video (center or left-aligned)
    Optional subheadline underneath, Shorten the vertical length of the mobile section. And reduce width for both desktop and mobile, I do not want full width
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-video-container-{{ ai_gen_id }} {
    width: 100%;
    padding: 0 {{ block.settings.section_padding }}px;
    display: flex;
    justify-content: center;
  }

  .ai-hero-video-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: {{ block.settings.section_max_width }}px;
    height: {{ block.settings.section_height }}vh;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: {{ block.settings.content_alignment }};
    border-radius: {{ settings.block_border_radius }}px;
  }

  .ai-hero-video__background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    border-radius: {{ settings.block_border_radius }}px;
  }

  .ai-hero-video__video-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ settings.block_border_radius }}px;
  }

  .ai-hero-video__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    border-radius: {{ settings.block_border_radius }}px;
  }

  .ai-hero-video__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 200px;
    opacity: 0.5;
  }

  .ai-hero-video__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-hero-video__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 2;
    border-radius: {{ settings.block_border_radius }}px;
  }

  .ai-hero-video__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    padding: 0 {{ block.settings.content_padding }}px;
    max-width: {{ block.settings.content_max_width }}px;
    width: 100%;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-hero-video__heading-{{ ai_gen_id }} {
    font-family: {{ settings.heading_font.family }}, {{ settings.heading_font.fallback_families }};
    font-weight: {{ settings.heading_font.weight }};
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.1;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px 0;
    letter-spacing: {{ settings.heading_letter_spacing }}%;
    text-transform: {{ settings.heading_text_transform }};
  }

  .ai-hero-video__subheading-{{ ai_gen_id }} {
    font-family: {{ settings.text_font.family }}, {{ settings.text_font.fallback_families }};
    font-weight: {{ settings.text_font.weight }};
    font-size: {{ block.settings.subheading_size }}px;
    line-height: 1.4;
    color: {{ block.settings.subheading_color }};
    margin: 0 0 {{ block.settings.subheading_spacing }}px 0;
    letter-spacing: {{ settings.text_font_letter_spacing }}%;
  }

  .ai-hero-video__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 16px 32px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ settings.button_border_radius }}px;
    font-family: {{ settings.text_font.family }}, {{ settings.text_font.fallback_families }};
    font-weight: 600;
    font-size: {{ block.settings.button_text_size }}px;
    transition: all 0.3s ease;
    border: 2px solid {{ block.settings.button_background }};
  }

  .ai-hero-video__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_background }};
  }

  @media screen and (max-width: 749px) {
    .ai-hero-video-container-{{ ai_gen_id }} {
      padding: 0 {{ block.settings.section_padding_mobile }}px;
    }

    .ai-hero-video-{{ ai_gen_id }} {
      height: {{ block.settings.section_height_mobile }}vh;
      max-width: {{ block.settings.section_max_width_mobile }}px;
    }

    .ai-hero-video__content-{{ ai_gen_id }} {
      padding: 0 20px;
    }

    .ai-hero-video__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-hero-video__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }

    .ai-hero-video__button-{{ ai_gen_id }} {
      padding: 14px 28px;
      font-size: {{ block.settings.button_text_size | times: 0.9 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-hero-video__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.6 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-hero-video-container-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-hero-video-{{ ai_gen_id }}">
    <div class="ai-hero-video__background-{{ ai_gen_id }}">
      {% if block.settings.video_file %}
        <video
          class="ai-hero-video__video-{{ ai_gen_id }}"
          autoplay
          muted
          loop
          playsinline
          preload="metadata"
          aria-hidden="true"
        >
          <source src="{{ block.settings.video_file }}" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      {% else %}
        <div class="ai-hero-video__placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
          <div class="ai-hero-video__empty-state-{{ ai_gen_id }}">
            Next, add a video file
          </div>
        </div>
      {% endif %}
    </div>

    {% if block.settings.show_overlay %}
      <div class="ai-hero-video__overlay-{{ ai_gen_id }}"></div>
    {% endif %}

    <div class="ai-hero-video__content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h1 class="ai-hero-video__heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h1>
      {% endif %}

      {% if block.settings.subheading != blank %}
        <div class="ai-hero-video__subheading-{{ ai_gen_id }}">
          {{ block.settings.subheading }}
        </div>
      {% endif %}

      {% if block.settings.button_text != blank and block.settings.button_link != blank %}
        <a
          href="{{ block.settings.button_link }}"
          class="ai-hero-video__button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

