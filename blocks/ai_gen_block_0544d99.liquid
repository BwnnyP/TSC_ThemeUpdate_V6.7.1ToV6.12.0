{% doc %}
  @prompt
    Hero heading section. Whole window height and width. Image for background. On top of the image is a heading title. underneath have a sub heading, and under that a paragraph. All centre aligned
{% enddoc %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-section-{{ ai_gen_id }}{
    position:relative;
    width:100%;
    height:100vh;
    display:flex;
    align-items:center;
    justify-content:center;
    overflow:hidden;
    isolation:isolate;
  }

  .ai-hero-background-{{ ai_gen_id }}{
    position:absolute;
    inset:0;
    z-index:1;
  }

  .ai-hero-background-{{ ai_gen_id }} img{
    width:100%;
    height:100%;
    object-fit:cover;
    transform: scale({{ block.settings.background_zoom }});
    transform-origin:center;
    filter: contrast(1.05) saturate(1.05);
  }

  .ai-hero-background-placeholder-{{ ai_gen_id }}{
    width:100%;
    height:100%;
    background:#111;
    display:flex;
    align-items:center;
    justify-content:center;
  }

  /* Vignette overlay (this is the “second screenshot” vibe) */
  .ai-hero-overlay-{{ ai_gen_id }}{
    position:absolute;
    inset:0;
    z-index:2;
    pointer-events:none;
    background:
      radial-gradient(ellipse at center,
        rgba(0,0,0, {{ block.settings.vignette_center_opacity }}) 0%,
        rgba(0,0,0, {{ block.settings.vignette_edge_opacity }}) 70%,
        rgba(0,0,0, {{ block.settings.vignette_edge_opacity }}) 100%
      ),
      rgba(0,0,0, {{ block.settings.overlay_opacity }});
  }

  .ai-hero-content-{{ ai_gen_id }}{
    position:relative;
    z-index:3;
    text-align:center;
    padding: 32px 20px;
    width:100%;
    max-width: {{ block.settings.content_max_width }}px;
  }

  /* Eyebrow / pill */
  .ai-hero-pill-{{ ai_gen_id }}{
    display:inline-flex;
    align-items:center;
    justify-content:center;
    gap:8px;
    padding: 8px 14px;
    border-radius: 999px;
    border: 1px solid rgba(255,255,255,0.14);
    background: rgba(0,0,0,0.25);
    color: rgba(255,255,255,0.65);
    font-size: 12px;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    margin-bottom: 18px;
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
  }

  /* Big headline (2 lines) */
  .ai-hero-heading-{{ ai_gen_id }}{
    margin:0 0 {{ block.settings.heading_spacing }}px;
    line-height: 0.95;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    font-weight: 600;
  }

  .ai-hero-heading-line1-{{ ai_gen_id }}{
    display:block;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-hero-heading-line2-{{ ai_gen_id }}{
    display:block;
    margin-top: 8px;
    font-size: {{ block.settings.heading_size | times: 0.92 }}px;
    color: {{ block.settings.accent_color }};
    letter-spacing: 0.02em;
  }

  .ai-hero-subheading-{{ ai_gen_id }}{
    margin: 0 0 {{ block.settings.subheading_spacing }}px;
    font-size: {{ block.settings.subheading_size }}px;
    line-height: 1.35;
    font-weight: 500;
    color: {{ block.settings.subheading_color }};
    opacity: 0.9;
  }

  .ai-hero-paragraph-{{ ai_gen_id }}{
    margin: 0 auto;
    font-size: {{ block.settings.paragraph_size }}px;
    line-height: 1.6;
    max-width: {{ block.settings.paragraph_max_width }}px;
    color: {{ block.settings.paragraph_color }};
    opacity: 0.75;
  }

  .ai-hero-callout-{{ ai_gen_id }}{
    margin: 18px auto 0;
    font-size: {{ block.settings.callout_size }}px;
    color: {{ block.settings.callout_color }};
    opacity: 0.95;
  }

  /* CTA */
  .ai-hero-cta-wrap-{{ ai_gen_id }}{
    margin-top: 26px;
    display:flex;
    justify-content:center;
  }

  .ai-hero-cta-{{ ai_gen_id }}{
    display:inline-flex;
    align-items:center;
    justify-content:center;
    gap: 10px;
    padding: 14px 22px;
    border-radius: 10px;
    text-decoration:none;
    font-weight: 600;
    letter-spacing: 0.02em;
    background: {{ block.settings.button_bg }};
    color: {{ block.settings.button_text }};
    border: 1px solid rgba(255,255,255,0.10);
    transition: transform 160ms ease, filter 160ms ease;
  }

  .ai-hero-cta-{{ ai_gen_id }}:hover{
    transform: translateY(-1px);
    filter: brightness(1.03);
  }

  .ai-hero-cta-icon-{{ ai_gen_id }}{
    display:inline-flex;
    align-items:center;
    justify-content:center;
    width: 18px;
    height: 18px;
    opacity: 0.95;
  }

  /* Scroll indicator */
  .ai-hero-scroll-{{ ai_gen_id }}{
    position:absolute;
    left:50%;
    bottom: 18px;
    transform: translateX(-50%);
    z-index:3;
    opacity: 0.75;
  }

  .ai-hero-mouse-{{ ai_gen_id }}{
    width: 22px;
    height: 34px;
    border-radius: 999px;
    border: 2px solid rgba(255,255,255,0.35);
    position: relative;
  }

  .ai-hero-mouse-{{ ai_gen_id }}::after{
    content:"";
    position:absolute;
    left:50%;
    top: 7px;
    width: 4px;
    height: 6px;
    border-radius: 999px;
    background: rgba(255,255,255,0.55);
    transform: translateX(-50%);
    animation: aiScrollDot-{{ ai_gen_id }} 1.4s infinite ease-in-out;
  }

  @keyframes aiScrollDot-{{ ai_gen_id }}{
    0% { transform: translate(-50%, 0); opacity: 0.35; }
    40%{ transform: translate(-50%, 8px); opacity: 0.85; }
    100%{ transform: translate(-50%, 14px); opacity: 0.0; }
  }

  @media screen and (max-width: 749px){
    .ai-hero-content-{{ ai_gen_id }}{ padding: 26px 16px; }

    .ai-hero-heading-line1-{{ ai_gen_id }}{
      font-size: {{ block.settings.heading_size | times: 0.64 }}px;
    }
    .ai-hero-heading-line2-{{ ai_gen_id }}{
      font-size: {{ block.settings.heading_size | times: 0.58 }}px;
    }

    .ai-hero-subheading-{{ ai_gen_id }}{
      font-size: {{ block.settings.subheading_size | times: 0.85 }}px;
    }

    .ai-hero-paragraph-{{ ai_gen_id }}{
      font-size: {{ block.settings.paragraph_size | times: 0.95 }}px;
    }

    .ai-hero-cta-{{ ai_gen_id }}{
      width: min(340px, 100%);
    }
  }
{% endstyle %}

<div class="ai-hero-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-background-{{ ai_gen_id }}">
    {% if block.settings.background_image %}
      <img
        src="{{ block.settings.background_image | image_url: width: 2400 }}"
        alt="{{ block.settings.background_image.alt | escape }}"
        loading="eager"
        width="{{ block.settings.background_image.width }}"
        height="{{ block.settings.background_image.height }}"
      >
    {% else %}
      <div class="ai-hero-background-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  {% if block.settings.show_overlay %}
    <div class="ai-hero-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-hero-content-{{ ai_gen_id }}">
    {% if block.settings.pill_text != blank %}
      <div class="ai-hero-pill-{{ ai_gen_id }}">{{ block.settings.pill_text }}</div>
    {% endif %}

    {% if block.settings.heading_line_1 != blank or block.settings.heading_line_2 != blank %}
      <h1 class="ai-hero-heading-{{ ai_gen_id }}">
        {% if block.settings.heading_line_1 != blank %}
          <span class="ai-hero-heading-line1-{{ ai_gen_id }}">{{ block.settings.heading_line_1 }}</span>
        {% endif %}
        {% if block.settings.heading_line_2 != blank %}
          <span class="ai-hero-heading-line2-{{ ai_gen_id }}">{{ block.settings.heading_line_2 }}</span>
        {% endif %}
      </h1>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-hero-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
    {% endif %}

    {% if block.settings.paragraph != blank %}
      <div class="ai-hero-paragraph-{{ ai_gen_id }}">{{ block.settings.paragraph }}</div>
    {% endif %}

    {% if block.settings.callout != blank %}
      <div class="ai-hero-callout-{{ ai_gen_id }}">{{ block.settings.callout }}</div>
    {% endif %}

    {% if block.settings.button_label != blank and block.settings.button_link != blank %}
      <div class="ai-hero-cta-wrap-{{ ai_gen_id }}">
        <a class="ai-hero-cta-{{ ai_gen_id }}" href="{{ block.settings.button_link }}">
          {{ block.settings.button_label }}
          <span class="ai-hero-cta-icon-{{ ai_gen_id }}" aria-hidden="true">↓</span>
        </a>
      </div>
    {% endif %}
  </div>

  {% if block.settings.show_scroll_indicator %}
    <div class="ai-hero-scroll-{{ ai_gen_id }}" aria-hidden="true">
      <div class="ai-hero-mouse-{{ ai_gen_id }}"></div>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Hero heading (v2)",
  "settings": [
    { "type": "header", "content": "Background" },
    { "type": "image_picker", "id": "background_image", "label": "Background image" },
    {
      "type": "range",
      "id": "background_zoom",
      "min": 1,
      "max": 1.2,
      "step": 0.1,
      "label": "Background zoom",
      "default": 1.0
    },

    { "type": "checkbox", "id": "show_overlay", "label": "Show overlay", "default": true },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Overlay opacity (base)",
      "default": 0.3
    },
    {
      "type": "range",
      "id": "vignette_center_opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Vignette center opacity",
      "default": 0.2
    },
    {
      "type": "range",
      "id": "vignette_edge_opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Vignette edge opacity",
      "default": 0.7
    },

    { "type": "header", "content": "Layout" },
    {
      "type": "range",
      "id": "content_max_width",
      "min": 420,
      "max": 1200,
      "step": 20,
      "unit": "px",
      "label": "Content max width",
      "default": 920
    },
    {
      "type": "range",
      "id": "paragraph_max_width",
      "min": 360,
      "max": 900,
      "step": 20,
      "unit": "px",
      "label": "Paragraph max width",
      "default": 720
    },

    { "type": "header", "content": "Text" },
    {
      "type": "inline_richtext",
      "id": "pill_text",
      "label": "Pill text (eyebrow)",
      "default": "THE SIMPLE COMMUTE"
    },
    {
      "type": "inline_richtext",
      "id": "heading_line_1",
      "label": "Heading line 1",
      "default": "VALOUR"
    },
    {
      "type": "inline_richtext",
      "id": "heading_line_2",
      "label": "Heading line 2 (accent)",
      "default": "BY TSC"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 32,
      "max": 140,
      "step": 4,
      "unit": "px",
      "label": "Heading size",
      "default": 104
    },
    { "type": "color", "id": "heading_color", "label": "Heading line 1 color", "default": "#ffffff" },
    { "type": "color", "id": "accent_color", "label": "Heading line 2 accent color", "default": "#2ea7ff" },
    {
      "type": "range",
      "id": "heading_spacing",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "label": "Heading bottom spacing",
      "default": 20
    },

    {
      "type": "inline_richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "Our performance lineup. No compromises."
    },
    {
      "type": "range",
      "id": "subheading_size",
      "min": 16,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Subheading size",
      "default": 30
    },
    { "type": "color", "id": "subheading_color", "label": "Subheading color", "default": "#cfd3d8" },
    {
      "type": "range",
      "id": "subheading_spacing",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Subheading bottom spacing",
      "default": 14
    },

    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "<p>Built for riders who want more — more power, more stability, more capability.</p>"
    },
    {
      "type": "range",
      "id": "paragraph_size",
      "min": 12,
      "max": 30,
      "step": 2,
      "unit": "px",
      "label": "Paragraph size",
      "default": 16
    },
    { "type": "color", "id": "paragraph_color", "label": "Paragraph color", "default": "#cfd3d8" },

    {
      "type": "inline_richtext",
      "id": "callout",
      "label": "Callout line (optional)",
      "default": "Scooters that don’t exist anywhere else in Australia."
    },
    {
      "type": "range",
      "id": "callout_size",
      "min": 12,
      "max": 26,
      "step": 1,
      "unit": "px",
      "label": "Callout size",
      "default": 16
    },
    { "type": "color", "id": "callout_color", "label": "Callout color", "default": "#ffffff" },

    { "type": "header", "content": "Button" },
    { "type": "text", "id": "button_label", "label": "Button label", "default": "Explore the Valour Lineup" },
    { "type": "url", "id": "button_link", "label": "Button link" },
    { "type": "color", "id": "button_bg", "label": "Button background", "default": "#2ea7ff" },
    { "type": "color", "id": "button_text", "label": "Button text", "default": "#000000" },

    { "type": "header", "content": "Extras" },
    { "type": "checkbox", "id": "show_scroll_indicator", "label": "Show scroll indicator", "default": true }
  ],
  "presets": [
    { "name": "Hero heading (v2)" }
  ]
}
{% endschema %}
