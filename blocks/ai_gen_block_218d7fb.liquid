{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-comparison-table-{{ ai_gen_id }} {
    width: 100%;
    max-width: 100%;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: {{ block.settings.padding }}px;
    box-shadow: 0 {{ block.settings.shadow_vertical_offset }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
  }

  .ai-comparison-table__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 32px;
  }

  .ai-comparison-table__title-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.title_size }}px;
    font-weight: 700;
    margin: 0 0 8px;
  }

  .ai-comparison-table__subtitle-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    font-size: {{ block.settings.subtitle_size }}px;
    margin: 0;
  }

  .ai-comparison-table__container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 2px;
    background-color: {{ block.settings.border_color }};
    border-radius: {{ block.settings.table_border_radius }}px;
    overflow: hidden;
  }

  .ai-comparison-table__cell-{{ ai_gen_id }} {
    background-color: {{ block.settings.cell_background }};
    padding: {{ block.settings.cell_padding }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: 60px;
  }

  .ai-comparison-table__cell-{{ ai_gen_id }}:first-child {
    justify-content: flex-start;
    text-align: left;
    font-weight: 600;
    color: {{ block.settings.feature_text_color }};
    background-color: {{ block.settings.feature_background }};
  }

  .ai-comparison-table__product-header-{{ ai_gen_id }} {
    background-color: {{ block.settings.product_header_background }};
    padding: {{ block.settings.cell_padding | plus: 8 }}px {{ block.settings.cell_padding }}px;
    flex-direction: column;
    gap: 12px;
    min-height: 120px;
  }

  .ai-comparison-table__product-image-{{ ai_gen_id }} {
    width: 80px;
    height: 80px;
    border-radius: {{ block.settings.image_border_radius }}px;
    object-fit: cover;
  }

  .ai-comparison-table__product-image-placeholder-{{ ai_gen_id }} {
    width: 80px;
    height: 80px;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-comparison-table__product-image-placeholder-{{ ai_gen_id }} svg {
    width: 40px;
    height: 40px;
    opacity: 0.5;
  }

  .ai-comparison-table__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    font-weight: 600;
    color: {{ block.settings.product_title_color }};
    margin: 0;
    line-height: 1.2;
  }

  .ai-comparison-table__product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    font-weight: 700;
    color: {{ block.settings.product_price_color }};
    margin: 0;
  }

  .ai-comparison-table__feature-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.feature_text_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-comparison-table__value-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.value_text_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    font-weight: 500;
  }

  .ai-comparison-table__checkmark-{{ ai_gen_id }} {
    color: {{ block.settings.checkmark_color }};
    font-size: 20px;
    font-weight: bold;
  }

  .ai-comparison-table__cross-{{ ai_gen_id }} {
    color: {{ block.settings.cross_color }};
    font-size: 20px;
    font-weight: bold;
  }

  .ai-comparison-table__button-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    padding: 12px 24px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .ai-comparison-table__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  .ai-comparison-table__empty-state-{{ ai_gen_id }} {
    color: #999;
    font-style: italic;
    font-size: 14px;
  }

  @media screen and (max-width: 768px) {
    .ai-comparison-table__container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 1px;
    }

    .ai-comparison-table__cell-{{ ai_gen_id }} {
      min-height: auto;
      padding: {{ block.settings.cell_padding | times: 0.8 }}px;
    }

    .ai-comparison-table__product-header-{{ ai_gen_id }} {
      flex-direction: row;
      gap: 16px;
      min-height: auto;
      text-align: left;
      justify-content: flex-start;
    }

    .ai-comparison-table__product-image-{{ ai_gen_id }},
    .ai-comparison-table__product-image-placeholder-{{ ai_gen_id }} {
      width: 60px;
      height: 60px;
    }

    .ai-comparison-table__product-info-{{ ai_gen_id }} {
      flex: 1;
    }

    .ai-comparison-table__mobile-row-{{ ai_gen_id }} {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1px;
      background-color: {{ block.settings.border_color }};
    }

    .ai-comparison-table__mobile-row-{{ ai_gen_id }} .ai-comparison-table__cell-{{ ai_gen_id }}:first-child {
      background-color: {{ block.settings.feature_background }};
    }
  }
{% endstyle %}

<div class="ai-comparison-table-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.title != blank or block.settings.subtitle != blank %}
    <div class="ai-comparison-table__header-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-comparison-table__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}
      {% if block.settings.subtitle != blank %}
        <p class="ai-comparison-table__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
      {% endif %}
    </div>
  {% endif %}

  <div class="ai-comparison-table__container-{{ ai_gen_id }}">
    <!-- Header Row -->
    <div class="ai-comparison-table__cell-{{ ai_gen_id }}"></div>
    
    <!-- Product 1 Header -->
    <div class="ai-comparison-table__cell-{{ ai_gen_id }} ai-comparison-table__product-header-{{ ai_gen_id }}">
      {% if block.settings.product_1 != blank %}
        {% if block.settings.product_1.featured_image %}
          <img 
            src="{{ block.settings.product_1.featured_image | image_url: width: 160 }}" 
            alt="{{ block.settings.product_1.featured_image.alt | escape }}"
            class="ai-comparison-table__product-image-{{ ai_gen_id }}"
            loading="lazy"
            width="80"
            height="80"
          >
        {% else %}
          <div class="ai-comparison-table__product-image-placeholder-{{ ai_gen_id }}">
            {{ 'product-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
        <div class="ai-comparison-table__product-info-{{ ai_gen_id }}">
          <h3 class="ai-comparison-table__product-title-{{ ai_gen_id }}">{{ block.settings.product_1.title }}</h3>
          <p class="ai-comparison-table__product-price-{{ ai_gen_id }}">{{ block.settings.product_1.price | money }}</p>
        </div>
      {% else %}
        <div class="ai-comparison-table__product-image-placeholder-{{ ai_gen_id }}">
          {{ 'product-1' | placeholder_svg_tag }}
        </div>
        <div class="ai-comparison-table__product-info-{{ ai_gen_id }}">
          <p class="ai-comparison-table__empty-state-{{ ai_gen_id }}">Select product 1</p>
        </div>
      {% endif %}
    </div>

    <!-- Product 2 Header -->
    <div class="ai-comparison-table__cell-{{ ai_gen_id }} ai-comparison-table__product-header-{{ ai_gen_id }}">
      {% if block.settings.product_2 != blank %}
        {% if block.settings.product_2.featured_image %}
          <img 
            src="{{ block.settings.product_2.featured_image | image_url: width: 160 }}" 
            alt="{{ block.settings.product_2.featured_image.alt | escape }}"
            class="ai-comparison-table__product-image-{{ ai_gen_id }}"
            loading="lazy"
            width="80"
            height="80"
          >
        {% else %}
          <div class="ai-comparison-table__product-image-placeholder-{{ ai_gen_id }}">
            {{ 'product-2' | placeholder_svg_tag }}
          </div>
        {% endif %}
        <div class="ai-comparison-table__product-info-{{ ai_gen_id }}">
          <h3 class="ai-comparison-table__product-title-{{ ai_gen_id }}">{{ block.settings.product_2.title }}</h3>
          <p class="ai-comparison-table__product-price-{{ ai_gen_id }}">{{ block.settings.product_2.price | money }}</p>
        </div>
      {% else %}
        <div class="ai-comparison-table__product-image-placeholder-{{ ai_gen_id }}">
          {{ 'product-2' | placeholder_svg_tag }}
        </div>
        <div class="ai-comparison-table__product-info-{{ ai_gen_id }}">
          <p class="ai-comparison-table__empty-state-{{ ai_gen_id }}">Select product 2</p>
        </div>
      {% endif %}
    </div>

    <!-- Feature Rows -->
    {% for i in (1..8) %}
      {% liquid
        assign feature_key = 'feature_' | append: i
        assign value_1_key = 'product_1_value_' | append: i
        assign value_2_key = 'product_2_value_' | append: i
        assign feature_text = block.settings[feature_key]
        assign value_1 = block.settings[value_1_key]
        assign value_2 = block.settings[value_2_key]
      %}
      
      {% if feature_text != blank %}
        <div class="ai-comparison-table__mobile-row-{{ ai_gen_id }}">
          <!-- Feature Name -->
          <div class="ai-comparison-table__cell-{{ ai_gen_id }}">
            <p class="ai-comparison-table__feature-text-{{ ai_gen_id }}">{{ feature_text }}</p>
          </div>

          <!-- Product 1 Value -->
          <div class="ai-comparison-table__cell-{{ ai_gen_id }}">
            {% if value_1 == 'yes' %}
              <span class="ai-comparison-table__checkmark-{{ ai_gen_id }}">✓</span>
            {% elsif value_1 == 'no' %}
              <span class="ai-comparison-table__cross-{{ ai_gen_id }}">✗</span>
            {% elsif value_1 != blank %}
              <p class="ai-comparison-table__value-text-{{ ai_gen_id }}">{{ value_1 }}</p>
            {% else %}
              <span class="ai-comparison-table__cross-{{ ai_gen_id }}">—</span>
            {% endif %}
          </div>

          <!-- Product 2 Value -->
          <div class="ai-comparison-table__cell-{{ ai_gen_id }}">
            {% if value_2 == 'yes' %}
              <span class="ai-comparison-table__checkmark-{{ ai_gen_id }}">✓</span>
            {% elsif value_2 == 'no' %}
              <span class="ai-comparison-table__cross-{{ ai_gen_id }}">✗</span>
            {% elsif value_2 != blank %}
              <p class="ai-comparison-table__value-text-{{ ai_gen_id }}">{{ value_2 }}</p>
            {% else %}
              <span class="ai-comparison-table__cross-{{ ai_gen_id }}">—</span>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}

    <!-- Action Buttons Row -->
    {% if block.settings.show_buttons %}
      <div class="ai-comparison-table__cell-{{ ai_gen_id }}">
        <p class="ai-comparison-table__feature-text-{{ ai_gen_id }}">{{ block.settings.button_row_label }}</p>
      </div>

      <div class="ai-comparison-table__cell-{{ ai_gen_id }}">
        {% if block.settings.product_1 != blank %}
          <a href="{{ block.settings.product_1.url }}" class="ai-comparison-table__button-{{ ai_gen_id }}">
            {{ block.settings.button_1_text }}
          </a>
        {% else %}
          <span class="ai-comparison-table__empty-state-{{ ai_gen_id }}">No product selected</span>
        {% endif %}
      </div>

      <div class="ai-comparison-table__cell-{{ ai_gen_id }}">
        {% if block.settings.product_2 != blank %}
          <a href="{{ block.settings.product_2.url }}" class="ai-comparison-table__button-{{ ai_gen_id }}">
            {{ block.settings.button_2_text }}
          </a>
        {% else %}
          <span class="ai-comparison-table__empty-state-{{ ai_gen_id }}">No product selected</span>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

