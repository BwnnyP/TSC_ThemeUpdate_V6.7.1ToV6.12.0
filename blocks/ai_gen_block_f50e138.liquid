{% doc %}
  @prompt
    I want a section that has a central heading and paragraph area
    
    Underneath it will be up to 5 'cards'. Each card is selectable. When selected, it will have a red outline. Only one card can be selected at a time. When selected, it will reveal text at the bottom
    Each card will have a small central image in a circle, a title, a paragraph, and then under that, up to 5 items in a list that have a tick next to them, When a card is selected, just make the text pop up in the bottom of the card
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-selectable-cards-{{ ai_gen_id }} {
    padding: 40px 20px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-selectable-cards__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
    position: relative;
    z-index: 0;
  }

  .ai-selectable-cards__heading-{{ ai_gen_id }} {
    font-family: {{ settings.heading_font.family }}, {{ settings.heading_font.fallback_families }};
    font-weight: {{ settings.heading_font.weight }};
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px 0;
    line-height: 1.2;
  }

  .ai-selectable-cards__description-{{ ai_gen_id }} {
    font-family: {{ settings.text_font.family }}, {{ settings.text_font.fallback_families }};
    font-weight: {{ settings.text_font.weight }};
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
    line-height: 1.5;
  }

  {% comment %}
    ===== Desktop / tablet grid =====
  {% endcomment %}
  .ai-selectable-cards__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 24px;
    padding: 0 100px;
    position: relative;
    z-index: 1;
  }

  .ai-selectable-cards__card-{{ ai_gen_id }} {
    background: {{ block.settings.card_background }};
    border: 2px solid {{ block.settings.card_border_color }};
    border-radius: {{ settings.block_border_radius }}px;
    padding: 32px 24px 24px;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    z-index: 1;
  }

  .ai-selectable-cards__card-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.card_hover_border_color }};
    transform: translateY(-2px);
  }

  .ai-selectable-cards__card-{{ ai_gen_id }}.selected {
    border-color: #ff0000;
    box-shadow: 0 0 0 1px #ff0000;
  }

  .ai-selectable-cards__card-image-{{ ai_gen_id }} {
    width: {{ block.settings.card_image_size }}px;
    height: {{ block.settings.card_image_size }}px;
    border-radius: 50%;
    margin: 0 auto 20px;
    overflow: hidden;
    background: {{ block.settings.card_image_background }};
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-selectable-cards__card-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-selectable-cards__card-image-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-selectable-cards__card-title-{{ ai_gen_id }} {
    font-family: {{ settings.heading_font.family }}, {{ settings.heading_font.fallback_families }};
    font-weight: {{ settings.heading_font.weight }};
    font-size: {{ block.settings.card_title_size }}px;
    color: {{ block.settings.card_title_color }};
    margin: 0 0 12px 0;
    line-height: 1.3;
  }

  .ai-selectable-cards__card-description-{{ ai_gen_id }} {
    font-family: {{ settings.text_font.family }}, {{ settings.text_font.fallback_families }};
    font-weight: {{ settings.text_font.weight }};
    font-size: {{ block.settings.card_description_size }}px;
    color: {{ block.settings.card_description_color }};
    margin: 0 0 20px 0;
    line-height: 1.4;
  }

  .ai-selectable-cards__card-list-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0 0 20px 0;
    text-align: left;
  }

  .ai-selectable-cards__card-list-item-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: 8px;
    margin-bottom: 8px;
    font-family: {{ settings.text_font.family }}, {{ settings.text_font.fallback_families }};
    font-weight: {{ settings.text_font.weight }};
    font-size: {{ block.settings.card_list_size }}px;
    color: {{ block.settings.card_list_color }};
    line-height: 1.4;
  }

  .ai-selectable-cards__card-list-item-{{ ai_gen_id }}:last-child {
    margin-bottom: 0;
  }

  .ai-selectable-cards__card-list-tick-{{ ai_gen_id }} {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
    margin-top: 2px;
    color: {{ block.settings.tick_color }};
  }

  .ai-selectable-cards__card-reveal-{{ ai_gen_id }} {
    background: {{ block.settings.reveal_background }};
    border-radius: {{ settings.input_border_radius }}px;
    padding: 16px;
    margin-top: 16px;
    opacity: 0;
    visibility: hidden;
    max-height: 0;
    overflow: hidden;
    transition: all 0.3s ease;
    border-top: 1px solid {{ block.settings.card_border_color }};
  }

  .ai-selectable-cards__card-reveal-{{ ai_gen_id }}.visible {
    opacity: 1;
    visibility: visible;
    max-height: 200px;
  }

  .ai-selectable-cards__card-reveal-content-{{ ai_gen_id }} {
    font-family: {{ settings.text_font.family }}, {{ settings.text_font.fallback_families }};
    font-weight: {{ settings.text_font.weight }};
    font-size: {{ block.settings.reveal_text_size }}px;
    color: {{ block.settings.reveal_text_color }};
    line-height: 1.5;
    margin: 0;
    text-align: left;
  }

  {% comment %}
    ===== Mobile: turn grid into a horizontal carousel =====
  {% endcomment %}
  @media screen and (max-width: 768px) {
    .ai-selectable-cards-{{ ai_gen_id }} {
      padding: 20px 12px;
    }

    .ai-selectable-cards__grid-{{ ai_gen_id }} {
      display: flex;
      overflow-x: auto;
      gap: 16px;
      padding: 6px 16px 8px;
      -webkit-overflow-scrolling: touch;
      scroll-snap-type: x mandatory;
      scrollbar-width: none;
    }
    .ai-selectable-cards__grid-{{ ai_gen_id }}::-webkit-scrollbar { display: none; }

    .ai-selectable-cards__card-{{ ai_gen_id }} {
      flex: 0 0 85%;
      scroll-snap-align: center;
      padding: 24px 20px 20px;
    }

    @media screen and (min-width: 480px) and (max-width: 768px) {
      .ai-selectable-cards__card-{{ ai_gen_id }} { flex-basis: 70%; }
    }

    .ai-selectable-cards__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<selectable-cards-{{ ai_gen_id }}
  class="ai-selectable-cards-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-selectable-cards__header-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-selectable-cards__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}
    {% if block.settings.description != blank %}
      <div class="ai-selectable-cards__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
    {% endif %}
  </div>

  <div class="ai-selectable-cards__grid-{{ ai_gen_id }}">
    {% for i in (1..5) %}
      {% liquid
        assign card_enabled_key = 'card_' | append: i | append: '_enabled'
        assign card_image_key = 'card_' | append: i | append: '_image'
        assign card_title_key = 'card_' | append: i | append: '_title'
        assign card_description_key = 'card_' | append: i | append: '_description'
        assign card_reveal_key = 'card_' | append: i | append: '_reveal_text'

        assign card_enabled = block.settings[card_enabled_key]
        assign card_image = block.settings[card_image_key]
        assign card_title = block.settings[card_title_key]
        assign card_description = block.settings[card_description_key]
        assign card_reveal = block.settings[card_reveal_key]
      %}

      {% if card_enabled %}
        <div
          class="ai-selectable-cards__card-{{ ai_gen_id }}"
          data-card-id="{{ i }}"
          role="button"
          tabindex="0"
          aria-pressed="false"
        >
          <div class="ai-selectable-cards__card-image-{{ ai_gen_id }}">
            {% if card_image %}
              <img
                src="{{ card_image | image_url: width: 200 }}"
                alt="{{ card_image.alt | escape }}"
                loading="lazy"
                width="200"
                height="200"
              >
            {% else %}
              {{ 'image' | placeholder_svg_tag }}
            {% endif %}
          </div>

          {% if card_title != blank %}
            <h3 class="ai-selectable-cards__card-title-{{ ai_gen_id }}">{{ card_title }}</h3>
          {% endif %}

          {% if card_description != blank %}
            <div class="ai-selectable-cards__card-description-{{ ai_gen_id }}">{{ card_description }}</div>
          {% endif %}

          <ul class="ai-selectable-cards__card-list-{{ ai_gen_id }}">
            {% for j in (1..5) %}
              {% liquid
                assign list_item_key = 'card_' | append: i | append: '_list_' | append: j
                assign list_item = block.settings[list_item_key]
              %}
              {% if list_item != blank %}
                <li class="ai-selectable-cards__card-list-item-{{ ai_gen_id }}">
                  <svg class="ai-selectable-cards__card-list-tick-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20,6 9,17 4,12"></polyline>
                  </svg>
                  <span>{{ list_item }}</span>
                </li>
              {% endif %}
            {% endfor %}
          </ul>

          <div class="ai-selectable-cards__card-reveal-{{ ai_gen_id }}" data-reveal-for="{{ i }}">
            <div class="ai-selectable-cards__card-reveal-content-{{ ai_gen_id }}">
              {% if card_reveal != blank %}
                {{ card_reveal }}
              {% else %}
                No additional information available.
              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</selectable-cards-{{ ai_gen_id }}>

<script>
  (function() {
    class SelectableCards{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.cards = [];
      }

      connectedCallback() {
        this.cards = this.querySelectorAll('.ai-selectable-cards__card-{{ ai_gen_id }}');
        this.setupEventListeners();

        {% comment %}
          Preselect without scrolling the page
        {% endcomment %}
        const defaultCard = this.querySelector('.ai-selectable-cards__card-{{ ai_gen_id }}[data-card-id="2"]');
        if (defaultCard) this.selectCard(defaultCard, { scroll: false });
      }

      setupEventListeners() {
        this.cards.forEach((card) => {
          card.addEventListener('click', () => this.selectCard(card, { scroll: true }));
          card.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' || e.key === ' ') {
              e.preventDefault();
              this.selectCard(card, { scroll: true });
            }
          });
        });
      }

      {% comment %}
        Add an options param to control scroll behavior
      {% endcomment %}
      selectCard(selectedCard, { scroll = true } = {}) {
        const cardId = selectedCard.dataset.cardId;

        this.cards.forEach((card) => {
          const reveal = card.querySelector('.ai-selectable-cards__card-reveal-{{ ai_gen_id }}');
          card.classList.remove('selected');
          card.setAttribute('aria-pressed', 'false');
          reveal.classList.remove('visible');
        });

        selectedCard.classList.add('selected');
        selectedCard.setAttribute('aria-pressed', 'true');

        const selectedReveal = selectedCard.querySelector('.ai-selectable-cards__card-reveal-{{ ai_gen_id }}');
        selectedReveal.classList.add('visible');

        {% comment %}
          Only scroll on user-initiated selections, and only on mobile
        {% endcomment %}
        if (scroll && window.matchMedia('(max-width: 768px)').matches) {
          selectedCard.scrollIntoView({
            behavior: 'smooth',
            inline: 'center',
            block: 'nearest' {% comment %} avoids big vertical jumps {% endcomment %}
          });
        }
      }
    }

    customElements.define('selectable-cards-{{ ai_gen_id }}', SelectableCards{{ ai_gen_id }});
  })();
</script>

