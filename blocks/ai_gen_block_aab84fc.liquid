<product-comparison-{{ ai_gen_id }}
  class="ai-comparison-table-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-comparison-header-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-comparison-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}
    
    {% if block.settings.description != blank %}
      <div class="ai-comparison-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
    {% endif %}
  </div>

  <div class="ai-comparison-products-{{ ai_gen_id }}">
    {% for i in (1..5) %}
      {% liquid
        assign product_key = 'product_' | append: i
        assign product = block.settings[product_key]
        assign product_description = 'description_product_' | append: i
        assign product_description_label = block.settings[product_description]
      %}
      
      {% if product != blank %}
        <div class="ai-comparison-product-card-{{ ai_gen_id }}" data-product-id="{{ product.id }}">
          <button class="ai-comparison-select-btn-{{ ai_gen_id }}" data-select-btn></button>
          
          <div class="ai-comparison-product-image-{{ ai_gen_id }}">
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 400 }}"
                alt="{{ product.featured_image.alt | escape }}"
                loading="lazy"
                width="400"
                height="400"
              >
            {% else %}
              <div class="ai-comparison-product-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>

          <div class="ai-comparison-trust-badges-{{ ai_gen_id }}">
            {% comment %}Space for trust badges from apps{% endcomment %}
          </div>

          <h3 class="ai-comparison-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
          
          <div class="ai-comparison-product-price-{{ ai_gen_id }}">
            {{ product.price | money }}
          </div>

          {% if product_description_label != blank %}
            <div class="ai-comparison-product-description-{{ ai_gen_id }}">
              {{ product_description_label | strip_html | truncate: 120 }}
            </div>
          {% endif %}

          <div class="ai-comparison-product-stats-{{ ai_gen_id }}">
            {% for j in (1..4) %}
              {% liquid
                assign stat_label_key = 'stat_' | append: j | append: '_label'
                assign stat_value_key = 'stat_' | append: j | append: '_value_product_' | append: i
                assign stat_label = block.settings[stat_label_key]
                assign stat_value = block.settings[stat_value_key]
              %}
              
              {% if stat_label != blank and stat_value != blank %}
                <div class="ai-comparison-stat-{{ ai_gen_id }}">
                  <div class="ai-comparison-stat-label-{{ ai_gen_id }}">{{ stat_label }}</div>
                  <div class="ai-comparison-stat-value-{{ ai_gen_id }}">{{ stat_value }}</div>
                </div>
              {% endif %}
            {% endfor %}
          </div>

          <a href="{{ product.url }}" class="ai-comparison-learn-more-btn-{{ ai_gen_id }}">
            Learn more
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <div class="ai-comparison-table-container-{{ ai_gen_id }}" data-comparison-table>
    <table class="ai-comparison-table-{{ ai_gen_id }}">
      <thead>
        <tr>
          <th>E-Scooter</th>
          <th class="product-column" data-product-header></th>
          <th class="product-column" data-product-header></th>
        </tr>
      </thead>
      <tbody>
        {% for i in (1..10) %}
          {% liquid
            assign field_label_key = 'field_' | append: i | append: '_label'
            assign field_label = block.settings[field_label_key]
          %}
          
          {% if field_label != blank %}
            <tr data-field-row="{{ i }}">
              <td><strong>{{ field_label }}</strong></td>
              <td class="product-column" data-field-value="{{ i }}" data-product-col="1"></td>
              <td class="product-column" data-field-value="{{ i }}" data-product-col="2"></td>
            </tr>
          {% endif %}
        {% endfor %}
      </tbody>
    </table>
    
    <div class="ai-comparison-table-actions-{{ ai_gen_id }}" data-table-actions>
    </div>
  </div>
</product-comparison-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductComparison{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.selectedProducts = [];
        this.maxSelections = 2;
        this.productData = {};
      }

      connectedCallback() {
        this.initializeElements();
        this.setupEventListeners();
        this.loadProductData();
      }

      initializeElements() {
        this.productCards = this.querySelectorAll('.ai-comparison-product-card-{{ ai_gen_id }}');
        this.comparisonTable = this.querySelector('[data-comparison-table]');
        this.tableActions = this.querySelector('[data-table-actions]');
      }

      setupEventListeners() {
        this.productCards.forEach(card => {
          const selectBtn = card.querySelector('[data-select-btn]');
          selectBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            this.toggleProductSelection(card);
          });
          card.addEventListener('click', () => {
            this.toggleProductSelection(card);
          });
        });
      }

      loadProductData() {
        this.productCards.forEach(card => {
          const productId = card.dataset.productId;
          if (!productId) return;

          this.productData[productId] = {
            title: card.querySelector('.ai-comparison-product-title-{{ ai_gen_id }}').textContent.trim(),
            url: card.querySelector('.ai-comparison-learn-more-btn-{{ ai_gen_id }}').href,
            fields: {}
          };

          {% for i in (1..10) %}
            {% liquid
              assign field_label_key = 'field_' | append: i | append: '_label'
              assign field_label = block.settings[field_label_key]
            %}
            {% if field_label != blank %}
              {% for j in (1..5) %}
                {% liquid
                  assign product_key = 'product_' | append: j
                  assign product = block.settings[product_key]
                  assign field_value_key = 'field_' | append: i | append: '_value_product_' | append: j
                  assign field_value = block.settings[field_value_key]
                %}
                {% if product != blank and field_value != blank %}
                  if (productId === '{{ product.id }}') {
                    this.productData[productId].fields[{{ i }}] = {{ field_value | json }};
                  }
                {% endif %}
              {% endfor %}
            {% endif %}
          {% endfor %}
        });
      }

      toggleProductSelection(card) {
        const productId = card.dataset.productId;
        const selectBtn = card.querySelector('[data-select-btn]');

        if (this.selectedProducts.includes(productId)) {
          this.selectedProducts = this.selectedProducts.filter(id => id !== productId);
          card.classList.remove('selected');
          selectBtn.classList.remove('selected');
        } else if (this.selectedProducts.length < this.maxSelections) {
          this.selectedProducts.push(productId);
          card.classList.add('selected');
          selectBtn.classList.add('selected');
        } else {
          // Replacing the oldest selection keeps UX snappy on mobile
          const removedId = this.selectedProducts.shift();
          // unselect the old card
          this.productCards.forEach(c => {
            if (c.dataset.productId === removedId) {
              c.classList.remove('selected');
              c.querySelector('[data-select-btn]').classList.remove('selected');
            }
          });
          // add new
          this.selectedProducts.push(productId);
          card.classList.add('selected');
          selectBtn.classList.add('selected');
        }

        this.onSelectionChanged(card);
      }

      onSelectionChanged(lastInteractedCard) {
        if (this.selectedProducts.length === 2) {
          this.populateComparisonTable();
          this.showComparisonTable();
          // Center the tapped card in the mobile carousel
          if (window.matchMedia('(max-width: 768px)').matches && lastInteractedCard) {
            lastInteractedCard.scrollIntoView({ behavior: 'smooth', inline: 'center', block: 'nearest' });
          }
        } else {
          this.hideComparisonTable();
        }
      }

      showComparisonTable() {
        if (!this.comparisonTable.classList.contains('visible')) {
          this.comparisonTable.classList.add('visible');
        }
        // Scroll to table when it appears
        this.comparisonTable.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }

      hideComparisonTable() {
        this.comparisonTable.classList.remove('visible');
        // Optional: clear headers/cells for cleanliness
        const headers = this.comparisonTable.querySelectorAll('[data-product-header]');
        headers.forEach(h => h.textContent = '');
        const fieldCells = this.comparisonTable.querySelectorAll('[data-field-value]');
        fieldCells.forEach(c => c.textContent = '');
        this.tableActions.innerHTML = '';
      }

      populateComparisonTable() {
        const headers = this.comparisonTable.querySelectorAll('[data-product-header]');
        const productColumns = this.comparisonTable.querySelectorAll('.product-column');

        // Ensure both product columns are visible
        productColumns.forEach(col => { col.style.display = 'table-cell'; });

        // Set headers (exactly two)
        headers[0].textContent = this.productData[this.selectedProducts[0]].title;
        headers[1].textContent = this.productData[this.selectedProducts[1]].title;

        // Populate rows
        const fieldCells = this.comparisonTable.querySelectorAll('[data-field-value]');
        fieldCells.forEach(cell => {
          const fieldIndex = cell.dataset.fieldValue;
          const productCol = cell.dataset.productCol; // '1' or '2'
          const productIndex = parseInt(productCol, 10) - 1; // 0 or 1
          const productId = this.selectedProducts[productIndex];
          const fieldValue = (this.productData[productId] && this.productData[productId].fields[fieldIndex]) || '-';
          cell.textContent = fieldValue;
        });

        // Actions: Learn more links for both products
        this.tableActions.innerHTML = '';
        this.selectedProducts.forEach(productId => {
          const productData = this.productData[productId];
          const learnMoreBtn = document.createElement('a');
          learnMoreBtn.href = productData.url;
          learnMoreBtn.className = 'ai-comparison-table-learn-btn-{{ ai_gen_id }}';
          learnMoreBtn.textContent = 'Learn more';
          this.tableActions.appendChild(learnMoreBtn);
        });
      }
    }

    customElements.define('product-comparison-{{ ai_gen_id }}', ProductComparison{{ ai_gen_id }});
  })();
</script>

