    content: 'âœ“';
    color: white;
    font-size: 14px;
    font-weight: bold;
  }

  .ai-comparison-product-image-{{ ai_gen_id }} {
    margin-bottom: 16px;
    border-radius: {{ settings.block_border_radius }}px;
    overflow: hidden;
    width: 100%;
    height: 220px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fff
  }

  .ai-comparison-product-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .ai-comparison-product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-comparison-product-image-placeholder-{{ ai_gen_id }} svg {
