  }

  .ai-comparison-product-title-{{ ai_gen_id }} {
    font-size: 1.2rem;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0 0 8px;
    line-height: 1.3;
  }

  .ai-comparison-product-price-{{ ai_gen_id }} {
    font-size: 1.1rem;
    font-weight: 600;
    color: {{ block.settings.price_color }};
    margin: 0 0 12px;
  }

  .ai-comparison-product-description-{{ ai_gen_id }} {
    font-size: 0.9rem;
    color: {{ block.settings.text_color }};
    margin: 0 0 16px;
    line-height: 1.4;
  }

  .ai-comparison-product-stats-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 8px;
    margin-bottom: 20px;
  }

  .ai-comparison-stat-{{ ai_gen_id }} {
    text-align: center;
    padding: 8px;
    background: rgba(0, 0, 0, 0.05);
    border-radius: 8px;
  }

  .ai-comparison-stat-label-{{ ai_gen_id }} {
