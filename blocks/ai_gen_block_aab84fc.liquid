    display: none;
    background: {{ block.settings.table_background_color }};
    border-radius: {{ settings.block_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    width: min(80%, 1200px);
    margin: 0 auto;
    box-sizing: border-box;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  .ai-comparison-table-container-{{ ai_gen_id }}.visible {
    display: block;
  }

  .ai-comparison-table-{{ ai_gen_id }} {
    width: 100%;
    margin: 0;
    border-collapse: separate;
    border-spacing: 0;
    table-layout: fixed;
  }

