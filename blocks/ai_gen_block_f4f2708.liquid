{% doc %}
  @prompt
    I need a section that has a subheading, heading, then 4 tiles/blocks with sub headings and text, and then underneath more text
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-info-tiles-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 80px 20px;
    background: {{ block.settings.section_bg | default: '#ffffff' }};
  }

  .ai-info-tiles-container-{{ ai_gen_id }} {
    max-width: 1120px;
    margin: 0 auto;
  }

  .ai-info-tiles-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 48px;
  }

  .ai-info-tiles-subheading-{{ ai_gen_id }} {
    font-size: 12px;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: {{ block.settings.subheading_color }};
    margin: 0 0 12px 0;
  }

  .ai-info-tiles-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
    font-weight: 400; /* more editorial, less “Shopify default bold” */
    line-height: 1.05;
  }

  /* ===== Editorial grid ===== */
  .ai-info-tiles-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    column-gap: 72px;
    row-gap: 56px;
    margin-bottom: 48px;
  }

  .ai-info-tile-{{ ai_gen_id }} {
    background: transparent;
    padding: 0 16px 0 0;
    border-radius: 0;
    text-align: left;
  }

  /* Cross dividers like the reference (desktop only) */
  @media screen and (min-width: 750px) {
    /* vertical divider between the 2 columns */
    .ai-info-tiles-grid-{{ ai_gen_id }} > .ai-info-tile-{{ ai_gen_id }}:nth-child(odd) {
      border-right: none;
      padding-right: 56px;
    }
    .ai-info-tiles-grid-{{ ai_gen_id }} > .ai-info-tile-{{ ai_gen_id }}:nth-child(even) {
      padding-left: 56px;
    }

    /* horizontal divider between row 1 and row 2 */
    .ai-info-tiles-grid-{{ ai_gen_id }} > .ai-info-tile-{{ ai_gen_id }}:nth-child(-n+2) {
      padding-bottom: 48px;
      border-bottom: none
    }
  }

  /* Tile inner layout: number + left accent line + text */
  .ai-info-tile-inner-{{ ai_gen_id }}{
    display: grid;
    grid-template-columns: 42px 1fr;
    column-gap: 18px;
    align-items: start;
  }

  .ai-info-tile-num-{{ ai_gen_id }}{
    font-size: 12px;
    letter-spacing: 0.08em;
    color: rgba(0,0,0,0.55);
    line-height: 1;
    padding-top: 6px;
  }

  .ai-info-tile-content-{{ ai_gen_id }}{
    padding-left: 18px;
  }

  .ai-info-tile-content-{{ ai_gen_id }} {
    position: relative;
    padding-left: 24px;
  }

  .ai-info-tile-content-{{ ai_gen_id }}::before {
    content: "";
    position: absolute;
    left: 0;
    top: 4px;
    bottom: 4px;
    width: 1px;
    background: rgba(0,0,0,0.12);
  }

  .ai-info-tile-subheading-{{ ai_gen_id }} {
    font-size: 18px;
    color: {{ block.settings.tile_subheading_color }};
    margin: 0 0 10px 0;
    font-weight: 500;
    line-height: 1.2;
  }

  .ai-info-tile-text-{{ ai_gen_id }} {
    font-size: 14px;
    color: rgba(0,0,0,0.62);
    margin: 0;
    line-height: 1.7;
  }

  .ai-info-tiles-footer-{{ ai_gen_id }} {
    margin-top: 10px;
    max-width: 720px;
  }

  .ai-info-tiles-footer-text-{{ ai_gen_id }} {
    font-size: 14px;
    color: rgba(0,0,0,0.62);
    margin: 0;
    line-height: 1.8;
  }

  /* Mobile: stack */
  @media screen and (max-width: 749px) {
    .ai-info-tiles-{{ ai_gen_id }} {
      padding: 56px 18px;
    }

    .ai-info-tiles-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      row-gap: 28px;
      column-gap: 0;
    }

    .ai-info-tiles-grid-{{ ai_gen_id }} > .ai-info-tile-{{ ai_gen_id }}{
      padding: 0;
      border: none;
    }

    .ai-info-tiles-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.78);
    }

    .ai-info-tiles-footer-{{ ai_gen_id }}{
      max-width: 100%;
    }
  }
{% endstyle %}

<ai-info-tiles-{{ ai_gen_id }} class="ai-info-tiles-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-info-tiles-container-{{ ai_gen_id }}">
    <div class="ai-info-tiles-header-{{ ai_gen_id }}">
      {% if block.settings.subheading != blank %}
        <div class="ai-info-tiles-subheading-{{ ai_gen_id }}">
          {{ block.settings.subheading }}
        </div>
      {% endif %}
      {% if block.settings.heading != blank %}
        <h2 class="ai-info-tiles-heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h2>
      {% endif %}
    </div>

    <div class="ai-info-tiles-grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign tile_subheading_key = 'tile_' | append: i | append: '_subheading'
          assign tile_text_key = 'tile_' | append: i | append: '_text'
          assign tile_subheading = block.settings[tile_subheading_key]
          assign tile_text = block.settings[tile_text_key]
        %}
        
        {% if tile_subheading != blank or tile_text != blank %}
          <div class="ai-info-tile-{{ ai_gen_id }}">
            <div class="ai-info-tile-inner-{{ ai_gen_id }}">
              <div class="ai-info-tile-num-{{ ai_gen_id }}">
                {% if i < 10 %}0{{ i }}{% else %}{{ i }}{% endif %}
              </div>

              <div class="ai-info-tile-content-{{ ai_gen_id }}">
                {% if tile_subheading != blank %}
                  <h3 class="ai-info-tile-subheading-{{ ai_gen_id }}">
                    {{ tile_subheading }}
                  </h3>
                {% endif %}

                {% if tile_text != blank %}
                  <div class="ai-info-tile-text-{{ ai_gen_id }}">
                    {{ tile_text }}
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if block.settings.footer_text != blank %}
      <div class="ai-info-tiles-footer-{{ ai_gen_id }}">
        <div class="ai-info-tiles-footer-text-{{ ai_gen_id }}">
          {{ block.settings.footer_text }}
        </div>
      </div>
    {% endif %}
  </div>
</ai-info-tiles-{{ ai_gen_id }}>

