{% doc %}
  @prompt
    an image hero with 'Why Australians Choose The Simple Commute' as the heading, 'Local support, fair pricing, and scooters built for Aussie roads. Here's why we're different from the rest.' as the sub heading, a 'Shop Scooters' CTA button below, with 3 columns underneath with '2,000+ happy riders', '24/7 local support', and '24 month warranty' below
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-section-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.section_height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: {{ block.settings.overlay_color }};
  }

  .ai-hero-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-hero-background-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-hero-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .ai-hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
    max-width: {{ block.settings.content_width }}px;
    padding: 40px 20px;
    width: 100%;
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 16px;
    color: {{ block.settings.text_color }};
  }

  .ai-hero-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    line-height: 1.4;
    margin: 0 0 32px;
    color: {{ block.settings.text_color }};
    opacity: 0.9;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 16px 32px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: 60px;
    font-weight: 600;
    font-size: {{ block.settings.button_text_size }}px;
    transition: all 0.3s ease;
    margin-bottom: 48px;
  }

  .ai-hero-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  .ai-hero-stats-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
    margin-top: 48px;
  }

  .ai-hero-stat-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-hero-stat-value-{{ ai_gen_id }} {
    font-size: {{ block.settings.stat_value_size }}px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 8px;
    color: {{ block.settings.text_color }};
  }

  .ai-hero-stat-label-{{ ai_gen_id }} {
    font-size: {{ block.settings.stat_label_size }}px;
    line-height: 1.3;
    margin: 0;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
  }

  @media screen and (max-width: 749px) {
    .ai-hero-section-{{ ai_gen_id }} {
      min-height: {{ block.settings.section_height | times: 0.7 }}px;
    }

    .ai-hero-content-{{ ai_gen_id }} {
      padding: 20px;
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-hero-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }

    .ai-hero-stats-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 24px;
      margin-top: 32px;
    }

    .ai-hero-stat-value-{{ ai_gen_id }} {
      font-size: {{ block.settings.stat_value_size | times: 0.8 }}px;
    }

    .ai-hero-stat-label-{{ ai_gen_id }} {
      font-size: {{ block.settings.stat_label_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-hero-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-background-{{ ai_gen_id }}">
    {% if block.settings.hero_image %}
      <img
        src="{{ block.settings.hero_image | image_url: width: 2000 }}"
        alt="{{ block.settings.hero_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.hero_image.width }}"
        height="{{ block.settings.hero_image.height }}"
      >
    {% else %}
      <div class="ai-hero-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-hero-empty-state-{{ ai_gen_id }}">
          Add a hero image to get started
        </div>
      </div>
    {% endif %}
  </div>

  <div class="ai-hero-overlay-{{ ai_gen_id }}"></div>

  <div class="ai-hero-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="ai-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <p class="ai-hero-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
    {% endif %}

    {% if block.settings.button_text != blank and block.settings.button_link != blank %}
      <a href="{{ block.settings.button_link }}" class="ai-hero-button-{{ ai_gen_id }}">
        {{ block.settings.button_text }}
      </a>
    {% endif %}

    <div class="ai-hero-stats-{{ ai_gen_id }}">
      {% if block.settings.stat_1_value != blank %}
        <div class="ai-hero-stat-{{ ai_gen_id }}">
          <div class="ai-hero-stat-value-{{ ai_gen_id }}">{{ block.settings.stat_1_value }}</div>
          <div class="ai-hero-stat-label-{{ ai_gen_id }}">{{ block.settings.stat_1_label }}</div>
        </div>
      {% endif %}

      {% if block.settings.stat_2_value != blank %}
        <div class="ai-hero-stat-{{ ai_gen_id }}">
          <div class="ai-hero-stat-value-{{ ai_gen_id }}">{{ block.settings.stat_2_value }}</div>
          <div class="ai-hero-stat-label-{{ ai_gen_id }}">{{ block.settings.stat_2_label }}</div>
        </div>
      {% endif %}

      {% if block.settings.stat_3_value != blank %}
        <div class="ai-hero-stat-{{ ai_gen_id }}">
          <div class="ai-hero-stat-value-{{ ai_gen_id }}">{{ block.settings.stat_3_value }}</div>
          <div class="ai-hero-stat-label-{{ ai_gen_id }}">{{ block.settings.stat_3_label }}</div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

