{% doc %}
  @prompt
    Valour feature tiles section.
    Centered heading + subheading, followed by 3–6 tiles.
    Dark, performance-focused styling.
{% enddoc %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-feature-tiles-wrap-{{ ai_gen_id }}{
    {% if block.settings.color_scheme == 'dark' %}
      --ft-bg: #000;
      --ft-text: #fff;
      --ft-muted: rgba(255,255,255,.65);

      --ft-card: rgba(255,255,255,.03);
      --ft-card-hover: rgba(255,255,255,.05);
      --ft-card-border: rgba(255,255,255,.08);
      --ft-card-border-hover: rgba(46,167,255,.35);

      --ft-icon: {{ block.settings.accent_color }};
      --ft-badge-bg: rgba(46,167,255,.08);
      --ft-badge-border: rgba(46,167,255,.18);
    {% else %}
      --ft-bg: {{ block.settings.section_bg }};
      --ft-text: {{ block.settings.text_color }};
      --ft-muted: rgba(0,0,0,.65);

      --ft-card: {{ block.settings.tile_background }};
      --ft-card-hover: {{ block.settings.tile_background_hover }};
      --ft-card-border: {{ block.settings.tile_border }};
      --ft-card-border-hover: {{ block.settings.tile_border_hover }};

      --ft-icon: {{ block.settings.icon_color }};
      --ft-badge-bg: {{ block.settings.icon_badge_bg }};
      --ft-badge-border: {{ block.settings.icon_badge_border }};
    {% endif %}
  }

  .ai-feature-tiles-wrap-{{ ai_gen_id }}{
    background: var(--ft-bg);
    padding: {{ block.settings.section_padding_y }}px 0;

    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    width: 100vw;
  }

  .ai-feature-tiles-inner-{{ ai_gen_id }}{
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-feature-tiles-header-{{ ai_gen_id }}{
    text-align: center;
    margin-bottom: 48px;
  }

  .ai-feature-tiles-heading-{{ ai_gen_id }}{
    margin: 0 0 12px;
    font-size: {{ block.settings.heading_size }}px;
    color: var(--ft-text);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-weight: 500;
    line-height: 1.05;
  }

  .ai-feature-tiles-heading-{{ ai_gen_id }} .accent{
    color: {{ block.settings.accent_color }};
  }

  .ai-feature-tiles-subheading-{{ ai_gen_id }}{
    margin: 0 auto;
    max-width: 720px;
    font-size: {{ block.settings.subheading_size }}px;
    color: var(--ft-text);
    color: var(--ft-muted);
    opacity: 1;
    line-height: 1.6;
  }

  .ai-feature-tiles-grid-{{ ai_gen_id }}{
    display: grid;
    gap: {{ block.settings.grid_gap }}px;
    grid-template-columns: repeat(3, minmax(0, 1fr));
  }

  .ai-feature-tiles-grid-{{ ai_gen_id }}.is-four-{{ ai_gen_id }} > .ai-feature-tile-{{ ai_gen_id }}:nth-child(4){
    grid-column: 2 / span 1;
  }

  .ai-feature-tile-{{ ai_gen_id }}{
    background: var(--ft-card);
    border: 1px solid var(--ft-card-border);
    border-radius: {{ block.settings.tile_border_radius }}px;
    padding: 28px 24px;
    display: flex;
    flex-direction: column;
    gap: 14px;
    min-height: 180px;
    box-shadow: 0 12px 32px rgba(0,0,0, {{ block.settings.tile_shadow_opacity }});
    transition: transform 160ms ease, border-color 160ms ease, background-color 160ms ease;
  }

  .ai-feature-tile-{{ ai_gen_id }}{
    position: relative;
    overflow: hidden;
  }

  .ai-feature-tile-{{ ai_gen_id }}::before{
    content:"";
    position:absolute;
    inset:-1px;
    pointer-events:none;
    opacity:0;
    transition: opacity 180ms ease;
    background: radial-gradient(
      600px circle at 22% 18%,
      rgba(46,167,255,0.18),
      rgba(46,167,255,0.06) 38%,
      transparent 68%
    );
  }

  .ai-feature-tile-{{ ai_gen_id }}:hover,
  .ai-feature-tile-{{ ai_gen_id }}:focus-within{
    border-color: rgba(46,167,255,0.55);
    box-shadow:
      0 0 0 1px rgba(46,167,255,0.22),
      0 18px 60px rgba(0,0,0,0.55),
      0 0 34px rgba(46,167,255,0.20);
    transform: translateY(-2px);
  }

  .ai-feature-tile-{{ ai_gen_id }}:hover::before,
  .ai-feature-tile-{{ ai_gen_id }}:focus-within::before{
    opacity: 1;
  }

  .ai-feature-tile-{{ ai_gen_id }}:hover .ai-feature-tile-icon-wrap-{{ ai_gen_id }},
  .ai-feature-tile-{{ ai_gen_id }}:focus-within .ai-feature-tile-icon-wrap-{{ ai_gen_id }}{
    border-color: rgba(46,167,255,0.35);
    background: rgba(46,167,255,0.12);
  }

  .ai-feature-tile-{{ ai_gen_id }}:active{
    box-shadow:
      0 0 0 1px rgba(46,167,255,0.28),
      0 12px 40px rgba(0,0,0,0.55),
      0 0 40px rgba(46,167,255,0.22);
  }

  .ai-feature-tile-{{ ai_gen_id }}:hover{
    transform: translateY(-2px);
    border-color: var(--ft-card-border-hover);
    background: var(--ft-card-hover);
  }

  .ai-feature-tile-icon-wrap-{{ ai_gen_id }}{
    width: {{ block.settings.icon_badge_size }}px;
    height: {{ block.settings.icon_badge_size }}px;
    border-radius: {{ block.settings.icon_badge_radius }}px;
    background: var(--ft-badge-bg);
    border: 1px solid var(--ft-badge-border);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-feature-tile-icon-{{ ai_gen_id }}{
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-feature-tile-icon-{{ ai_gen_id }} svg{
    width: 100%;
    height: 100%;
    stroke: var(--ft-icon);
    fill: none;
    stroke-width: 2;
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  .ai-feature-tile-heading-{{ ai_gen_id }}{
    margin: 0;
    font-size: {{ block.settings.tile_heading_size }}px;
    color: var(--ft-text);
    font-weight: 600;
  }

  .ai-feature-tile-text-{{ ai_gen_id }}{
    margin: 0;
    font-size: {{ block.settings.tile_text_size }}px;
    color: var(--ft-text);
    opacity: 0.7;
    line-height: 1.65;
  }

  @media (max-width: 989px){
    .ai-feature-tiles-grid-{{ ai_gen_id }}{
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (max-width: 749px){
    .ai-feature-tiles-inner-{{ ai_gen_id }}{
      padding: 0 16px;
    }

    .ai-feature-tiles-grid-{{ ai_gen_id }}{
      display: flex;
      gap: {{ block.settings.grid_gap }}px;
      overflow-x: auto;

      /* avoid double-padding because inner already has 16px */
      padding: 0 0 10px;

      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      scroll-padding-left: 16px;

      /* key fix: when a tile is focused/tapped and browser scrolls, don't tuck under the top UI */
      scroll-padding-top: 96px;

      /* kill grid behaviour */
      grid-template-columns: none;
    }

    .ai-feature-tiles-grid-{{ ai_gen_id }} > .ai-feature-tile-{{ ai_gen_id }}{
      flex: 0 0 86%;
      scroll-snap-align: start;

      /* same value as scroll-padding-top */
      scroll-margin-top: 96px;

      -webkit-tap-highlight-color: transparent;
    }

    /* Touch widths: don't "lift" on tap/focus (reduces perceived clipping) */
    .ai-feature-tile-{{ ai_gen_id }}:hover,
    .ai-feature-tile-{{ ai_gen_id }}:active,
    .ai-feature-tile-{{ ai_gen_id }}:focus-within{
      transform: none;
    }

    /* optional: hide scrollbar but keep swipe */
    .ai-feature-tiles-grid-{{ ai_gen_id }}{
      scrollbar-width: none;
    }
    .ai-feature-tiles-grid-{{ ai_gen_id }}::-webkit-scrollbar{
      display: none;
    }

    .ai-feature-tiles-heading-{{ ai_gen_id }}{
      font-size: {{ block.settings.heading_size | times: 0.78 }}px;
      letter-spacing: 0.06em;
    }

    .ai-feature-tiles-subheading-{{ ai_gen_id }}{
      font-size: {{ block.settings.subheading_size | times: 0.95 }}px;
    }
  }
{% endstyle %}

<div class="ai-feature-tiles-wrap-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-feature-tiles-inner-{{ ai_gen_id }}">
    <div class="ai-feature-tiles-header-{{ ai_gen_id }}">
      <h2 class="ai-feature-tiles-heading-{{ ai_gen_id }}">
        {{ block.settings.heading_prefix }}
        <span class="accent">{{ block.settings.heading_accent }}</span>
        {{ block.settings.heading_suffix }}
      </h2>

      <p class="ai-feature-tiles-subheading-{{ ai_gen_id }}">
        {{ block.settings.subheading }}
      </p>
    </div>

    {% liquid
      assign enabled_count = 0
      for i in (1..6)
        assign enabled_key = 'tile_' | append: i | append: '_enabled'
        if block.settings[enabled_key]
          assign enabled_count = enabled_count | plus: 1
        endif
      endfor
    %}

    <div class="ai-feature-tiles-grid-{{ ai_gen_id }}{% if enabled_count == 4 %} is-four-{{ ai_gen_id }}{% endif %}">
      {% for i in (1..6) %}
        {% liquid
          assign enabled_key = 'tile_' | append: i | append: '_enabled'
          assign icon_key    = 'tile_' | append: i | append: '_icon'
          assign heading_key = 'tile_' | append: i | append: '_heading'
          assign text_key    = 'tile_' | append: i | append: '_text'

          assign enabled = block.settings[enabled_key]
          assign icon    = block.settings[icon_key]
          assign heading = block.settings[heading_key]
          assign text    = block.settings[text_key]
        %}

        {% if enabled %}
          <div class="ai-feature-tile-{{ ai_gen_id }}">
            <div class="ai-feature-tile-icon-wrap-{{ ai_gen_id }}">
              <div class="ai-feature-tile-icon-{{ ai_gen_id }}">
                {% case icon %}
                  {% when 'zap' %}<svg viewBox="0 0 24 24"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/></svg>
                  {% when 'shield' %}<svg viewBox="0 0 24 24"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
                  {% when 'clock' %}<svg viewBox="0 0 24 24"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                  {% when 'award' %}<svg viewBox="0 0 24 24"><circle cx="12" cy="8" r="7"/><polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"/></svg>
                  {% when 'thumbs_up' %}<svg viewBox="0 0 24 24"><path d="M14 9V5a3 3 0 0 0-3-3l-4 9v11h11.28a2 2 0 0 0 2-1.7l1.38-9a2 2 0 0 0-2-2.3z"/></svg>
                  {% else %}<svg viewBox="0 0 24 24"><circle cx="12" cy="12" r="10"/></svg>
                {% endcase %}
              </div>
            </div>

            {% if heading != blank %}
              <h3 class="ai-feature-tile-heading-{{ ai_gen_id }}">{{ heading }}</h3>
            {% endif %}
            {% if text != blank %}
              <p class="ai-feature-tile-text-{{ ai_gen_id }}">{{ text }}</p>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

